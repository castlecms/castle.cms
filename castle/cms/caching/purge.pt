<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
</head>

<body>
  <metal:body fill-slot="body">
    <article id="content">

    <h1 class="documentFirstHeading">Cache Invalidation</h1>

    <div metal:use-macro="context/global_statusmessage/macros/portal_message">
      Portal status message
    </div>

    <tal:purged tal:condition="view/purged">
      <h3>Purged urls</h3>

      <ul class='purge-paths'>
        <tal:path tal:repeat="url python: sorted(view.purged)">
          <li tal:content="url" />
        </tal:path>
      </ul>

      <p class="discreet" tal:condition="python: not view.cf_enabled">Cloudflare not enabled</p>
      <p class="discreet" tal:condition="python: not view.sp_enabled">Stackpath not enabled</p>
      <p class="discreet" tal:condition="python: not view.fastly_enabled">Fastly not enabled</p>

      <tal:path tal:repeat="success view/success">
        <p class="discreet" tal:condition="python: not success['value']">
          <span tal:content="success/name"></span>
          <span>unable to purge cache</span>
        </p>
        <p class="discreet" tal:condition="python: success['value']">

          <!--Cloudflare purging-->
          <span tal:condition="python: success['name'] == 'Cloudflare'">
            <p class="discreet" tal:condition="python: view.cf_enabled and view.proxy_enabled">
              Cloudflare and caching proxies purged
            </p>
            <p class="discreet" tal:condition="python: view.cf_enabled and not view.proxy_enabled">
              Cloudflare purged
            </p>
            <p class="discreet" tal:condition="python: not view.cf_enabled and view.proxy_enabled">
              Caching proxies purged
            </p>
          </span>

          <!--Stackpath purging-->
          <span tal:condition="python: success['name'] == 'StackPath'">
            <p class="discreet" tal:condition="python: view.sp_enabled and view.proxy_enabled">
              Stackpath and caching proxies purged
            </p>
            <p class="discreet" tal:condition="python: view.sp_enabled and not view.proxy_enabled">
              Stackpath purged
            </p>
            <p class="discreet" tal:condition="python: not view.sp_enabled and view.proxy_enabled">
              Caching proxies purged
            </p>
          </span>

          <!--Fastly purging-->
          <span tal:condition="python: success['name'] == 'Fastly'">
            <p class="discreet" tal:condition="python: view.fastly_enabled and view.proxy_enabled">
              Fastly and caching proxies purged
            </p>
            <p class="discreet" tal:condition="python: view.fastly_enabled and not view.proxy_enabled">
              Fastly purged
            </p>
            <p class="discreet" tal:condition="python: not view.fastly_enabled and view.proxy_enabled">
              Caching proxies purged
            </p>
          </span>
        </p>
      </tal:path>
    </tal:purged>

    <form method="POST"
          action="${context/absolute_url}/@@castle-purge">
      <span tal:replace="structure context/@@authenticator/authenticator"/>
      <div class="formControls">
        <input type="submit" class="submit-widget button-field"
               name="purge-button" value="Purge again" />
      </div>
    </form>
  </metal:body>
</body>
</html>
