<tal:container tal:define="image python: view.get_image();
                           height python: view.data.get('height') or '400px';
                           width_values python: view.get_width_values();
                           img_width python: width_values['img_width'];
                           img_margin python: width_values['img_margin'];
                           txt_width python: width_values['txt_width'];
                           txt_margin python: width_values['txt_margin'];
                           heading_size python: view.data.get('heading_size') or '32px';
                           heading_text python: view.data.get('heading_text') or '';
                           heading_color python: view.data.get('heading_color') or 'black';
                           body_size python: view.data.get('body_size') or '12px';
                           body_text python: view.data.get('body_text') or '';
                           body_color python: view.data.get('body_color') or 'black';
                           text_position python: view.data.get('text_position') or 'left';">
  <div class="parallax-image-tile-container"
       tal:condition="nocall: image"
       style="background-image: url('${image/absolute_url}');
              min-height: ${height};
              width: ${img_width};
              margin-left: ${img_margin};">
    <div class="parallax-text-container"
         style="width: ${txt_width};
                margin-left: ${txt_margin}">
      <p class="parallax-tile-heading-text"
        style="font-size: ${heading_size};
                color: ${heading_color};
                text-align: ${text_position};">${heading_text}</p>
      <p class="parallax-tile-body-text"
        style="font-size: ${body_size};
                color: ${body_color};
                text-align: ${text_position};">${body_text}</p>
    </div>
  </div>
  <p tal:condition="python: not image and not view.utils.is_anonymous()">
    No image specified
  </p>
</tal:container>
