<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en-US" lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
  <body>
    <tal:container>
      <tal:defs tal:define="image python: view.get_image();">
        <div class="parallax-image-tile-container">
          <section class="parallax-section parallax parallax-bg1"
                  style="--bg1-image: url('${image/absolute_url}');">
              <h1>Cute Kitten</h1>
          </section>
          <section class="parallax-section parallax-static">
              <h1>Boring</h1>
          </section>
          <section class="parallax-section parallax parallax-bg2"
                  style="--bg2-image: url('https://placekitten.com/g/800/600');">
              <h1>Fluffy Kitten</h1>
          </section>
        </div>
      </tal:defs>
    </tal:container>
  </body>
</html>
