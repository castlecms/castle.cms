<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="toolbar_menu" meta_type="CMF Action Category">
  <object name="convert_template" meta_type="CMF Action">
   <property name="title">Template</property>
   <property name="description">Copy this item to a template.</property>
   <property
      name="url_expr">string:${object/absolute_url}/@@convert_template</property>
   <property
      name="available_expr">object/@@castle-toolbar-utils/show_template</property>
   <property name="permissions">
    <element value="Add portal content"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
